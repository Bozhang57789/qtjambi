<project default="build">
    <property name="plugin-subdir" value="sqldrivers"/>
    <property name="module-name" value="qsqljdbc"/>
    <property name="qtjambi-module-name" value="qtjambi.sql"/>
    <property name="qtjambi-libfiles" value="qtjambi${module.suffix}-${qtjambi.jar.version}.jar,
                                             qtjambi-core${module.suffix}-${qtjambi.jar.version}.jar,
                                             qtjambi-gui${module.suffix}-${qtjambi.jar.version}.jar,
                                             qtjambi-widgets${module.suffix}-${qtjambi.jar.version}.jar,
                                             qtjambi-sql${module.suffix}-${qtjambi.jar.version}.jar"/>
    <target name="build">
        <if>
            <available file="${generator.outputdir}/java/${qtjambi-module-name}" type="dir"/>
            <then>
                <ant antfile="${basedir}/../plugins.xml" inheritrefs="true" target="createjar1">
                    <property name="module" value="${module-name}"/>
                    <property name="sourcedir" value="${java.srcdir}/qtjambi-plugins/${module-name}"/>
                    <property name="jar.excludes" value=""/>
                    <property name="module.excludes" value=""/>
                    <property name="plugin.metadata" value="{''Keys'':[''QJDBC'']}"/>
                    <property name="plugin.class.name" value="io.qt.sql.jdbc.QJdbc"/>
                </ant>
            </then>
        </if>
    </target>
</project>
