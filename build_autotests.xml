    <target name="copy-resources">
        <copy todir="${test.java.outdir}" includeemptydirs="false">
            <fileset dir="${src}">
                <include name="**/*"/>
                <exclude name="**/.*"/>
                <exclude name="build.xml"/>
                <exclude name="**/*.java"/>
                <exclude name="**/*.jui"/>
                <exclude name="${jar.excludes}"/>
            </fileset>
        </copy>
    </target>

    <target name="compile.java" depends="init.build, compile.deps, check.junit, check.ssl">
        <ant inheritrefs="true" target="compile.java.impl">
        <property name="module.suffix" value=""/>
            <property name="test.java.outdir" location="${outputDir}/tests/java"/>
            <property name="test.java.srcoutdir" location="${outputDir}/tests/java-src"/>
        </ant>
    </target>
    <target name="compile.java8" depends="init.build, compile.deps, check.junit, check.ssl">
        <ant inheritrefs="true" target="compile.java.impl">
            <property name="minimum.java.version" value="1.8"/>
            <property name="source.java.version" value="1.8"/>
            <property name="module.suffix" value="-jre8"/>
            <property name="java.module.based" value="false"/>
            <property name="test.java.outdir" location="${outputDir}/tests/java8"/>
            <property name="test.java.srcoutdir" location="${outputDir}/tests/java8-src"/>
        </ant>
    </target>
    <target name="compile.java.impl" depends="init.build, compile.deps, check.junit, check.ssl">
        <delete dir="${test.java.outdir}" failonerror="no"/>
        <mkdir dir="${test.java.outdir}"/>
        <!-- encoding="UTF-8" required due to some file tests (I18N) using
        no ASCII/ISO-8859-1 characters and the MacOSX Java using "MacRoman"
        character set by default. -->
        <if>
            <equals arg1="${test.java.outdir}" arg2="${outputDir}/tests/java8"/>
            <then>
                <path id="qtjambi.classpath">
                    <fileset dir="${deploymentdir}">
                        <include name="qtjambi*-jre8-${qtjambi.jar.version}.jar"/>
                        <exclude name="qtjambi-*native-*.jar"/>
                    </fileset>
                    <pathelement location="${tests.junit}" />
                    <pathelement location="${tests.hamcrest}" />
                    <pathelement location="${jna.lib}" />
                </path>
            </then>
            <else>
                <path id="qtjambi.classpath">
                    <fileset dir="${deploymentdir}">
                        <include name="qtjambi*-${qtjambi.jar.version}.jar"/>
                        <exclude name="qtjambi*-jre8-${qtjambi.jar.version}.jar"/>
                        <exclude name="qtjambi-*native-*.jar"/>
                    </fileset>
                    <pathelement location="${tests.junit}" />
                    <pathelement location="${tests.hamcrest}" />
                    <pathelement location="${jna.lib}" />
                </path>
            </else>
        </if>
        <delete dir="${test.java.srcoutdir}"/>
        <mkdir dir="${test.java.srcoutdir}"/>
        <copy todir="${test.java.srcoutdir}">
            <fileset refid="qtjambi.autotest.classes"/>
        </copy>
        <copy todir="${test.java.srcoutdir}">
            <fileset dir="src/java/autotest">
                <include name="io/qt/**/*"/>
                <exclude name="io/qt/**/Test*.java"/>
            </fileset>
        </copy>
        <copy todir="${test.java.srcoutdir}">
            <fileset dir="${outputDir}/tests/autotest-generator/java" includes="*.java,io/qt/**/*.java"/>
        </copy>
        <if>
            <istrue value="${java.module.based}"/>
            <then>
                <autotest-module-info outputDirectory="${outputDir}/tests/autotest-generator/java" javaDirectory="${generator.outputdir}/java"/>
                <javac destdir="${test.java.outdir}" debug="true" srcdir="${test.java.srcoutdir}"
                        includeantruntime="false"
                        source="${source.java.version}" target="${minimum.java.version}" encoding="UTF-8">
                    <compilerarg value="-Xlint:deprecation" />
                    <compilerarg value="-Xlint:unchecked" />
                    <modulepath refid="qtjambi.classpath"/>
                </javac>
            </then>
            <else>
            <delete file="${test.java.srcoutdir}/module-info.java"/>
                <javac destdir="${test.java.outdir}" debug="true" srcdir="${test.java.srcoutdir}" excludes="module-info.java"
                        includeantruntime="false"
                        source="${source.java.version}" target="${minimum.java.version}" encoding="UTF-8">
                    <compilerarg value="-Xlint:deprecation" />
                    <compilerarg value="-Xlint:unchecked" />
                    <classpath refid="qtjambi.classpath"/>
                </javac>
            </else>
        </if>
        <antcall inheritrefs="true" target="copy-resources">
            <param name="src" value="${basedir}/src/java/autotest"/>
        </antcall>
        <if>
            <istrue value="${qtjambi.qml.any.true}"/>
            <then>
                <ant antfile="${basedir}/src/java/qtjambi-qml/qml.xml" inheritrefs="true" target="build">
                    <property name="qtjambi.testbuild" value="true"/>
                </ant>
            </then>
        </if>
        <ant antfile="${basedir}/src/java/qtjambi-plugins/plugins.xml" inheritrefs="true" target="build">
            <property name="qtjambi.testbuild" value="true"/>
        </ant>
        <if>
            <or>
                <equals arg1="${qtjambi.configuration}" arg2="release" />
                <equals arg1="${qtjambi.configuration}" arg2="test" />
                <equals arg1="${qtjambi.configuration}" arg2="debug_and_release" />
            </or>
            <then>
                <if>
                    <istrue value="${qtjambi.qml.any.true}"/>
                    <then>
                        <ant antfile="${basedir}/src/java/qtjambi-qml/qml.xml" inheritrefs="true" target="build">
                            <property name="qtjambi.testbuild" value="true"/>
                            <property name="platformjar.debug" value="false"/>
                            <property name="qtjambi.qml.bundle" value="true"/>
                            <property name="module.suffix" value=""/>
                        </ant>
                    </then>
                </if>
                <ant antfile="${basedir}/src/java/qtjambi-plugins/plugins.xml" inheritrefs="true" target="build">
                    <property name="qtjambi.testbuild" value="true"/>
                    <property name="platformjar.debug" value="false"/>
                    <property name="qtjambi.plugin.bundle" value="true"/>
                    <property name="module.suffix" value=""/>
                </ant>
            </then>
        </if>
        <if>
            <or>
                <equals arg1="${qtjambi.configuration}" arg2="debug" />
                <equals arg1="${qtjambi.configuration}" arg2="debug_and_release" />
            </or>
            <then>
                <if>
                    <istrue value="${qtjambi.qml.any.true}"/>
                    <then>
                        <ant antfile="${basedir}/src/java/qtjambi-qml/qml.xml" inheritrefs="true" target="build">
                            <property name="qtjambi.testbuild" value="true"/>
                            <property name="platformjar.debug" value="true"/>
                            <property name="qtjambi.qml.bundle" value="true"/>
                        </ant>
                    </then>
                </if>
                <ant antfile="${basedir}/src/java/qtjambi-plugins/plugins.xml" inheritrefs="true" target="build">
                    <property name="qtjambi.testbuild" value="true"/>
                    <property name="platformjar.debug" value="true"/>
                    <property name="qtjambi.plugin.bundle" value="true"/>
                </ant>
            </then>
        </if>
    </target>

    <target name="run.test" depends="init.test, check.junit">
        <qtjambi-resolve-path var="absOutputDir"     path="${outputDir}" />
        <property name="nativeBaseDir" location="${basedir}/deployment/native/${qtjambi.osname}/${kind}"/>
        <property name="qtLib"         location="${qtjambi.qt.libdir}"/>
        <property name="qtBin"         location="${qtjambi.qt.bindir}"/>
        <property name="qtTools"       location="${QTDIR}/tools"/>
        <property name="jambiLib"      location="${basedir}/deployment/native/${qtjambi.osname}/${kind}/lib"/>
        <property name="jambiBin"      location="${basedir}/deployment/native/${qtjambi.osname}/${kind}/bin"/>
        <if>
            <equals arg1="${jdk-exec-version}" arg2="8"/>
            <then>
                <if>
                    <os family="windows"/>
                    <then>
                        <property name="test.jvm" location="${java8.home.target}/bin/java.exe"/>
                    </then>
                    <else>
                        <property name="test.jvm" location="${java8.home.target}/bin/java"/>
                    </else>
                </if>
                <if>
                    <not>
                        <available file="${test.jvm}" type="file"/>
                    </not>
                    <then>
                        <fail message="No jdk8 available. Please specify JAVA8_HOME_TARGET environment variable."/>
                    </then>
                </if>
                <path id="qtjambi.classpath">
                    <fileset dir="${deploymentdir}">
                        <include name="qtjambi*-jre8-${qtjambi.jar.version}.jar"/>
                        <exclude name="qtjambi-*native-*.jar"/>
                    </fileset>
                    <pathelement location="${tests.junit}" />
                    <pathelement location="${tests.hamcrest}" />
                    <pathelement location="${sqlite.jdbc}" />
                    <pathelement location="${jna.lib}" />
                    <pathelement path="${absOutputDir}/tests/java8" />
                </path>
            </then>
            <else>
                <if>
                    <os family="windows"/>
                    <then>
                        <property name="test.jvm" location="${java.home.target}/bin/java.exe"/>
                    </then>
                    <else>
                        <property name="test.jvm" location="${java.home.target}/bin/java"/>
                    </else>
                </if>
                <if>
                    <not>
                        <available file="${test.jvm}" type="file"/>
                    </not>
                    <then>
                        <property name="test.jvm" location="java"/>
                    </then>
                </if>
                <path id="qtjambi.classpath">
                    <fileset dir="${deploymentdir}">
                        <include name="qtjambi*-${qtjambi.jar.version}.jar"/>
                        <exclude name="qtjambi*-jre8-${qtjambi.jar.version}.jar"/>
                        <exclude name="qtjambi-*native-*.jar"/>
                    </fileset>
                    <pathelement location="${tests.junit}" />
                    <pathelement location="${tests.hamcrest}" />
                    <pathelement location="${sqlite.jdbc}" />
                    <pathelement location="${jna.lib}" />
                    <pathelement path="${absOutputDir}/tests/java" />
                </path>
            </else>
        </if>
        <if>
            <os family="windows"/>
            <then>
                <property name="absQtPath"         location="${qtBin}" />
                <property name="absJambiPath"      location="${jambiBin}" />
            </then>
            <else>
                <property name="absQtPath"         location="${qtLib}" />
                <property name="absJambiPath"      location="${jambiLib}" />
            </else>
        </if>
        <condition property="env.qtjambi.debug.trace" value="QTJAMBI_DEBUG_TRACE" else="QTJAMBI_DEBUG_TRACE_DISABLED">
            <istrue value="${qtjambi.debug.trace}"/>
        </condition>
        <if>
            <available type="file" file="${sqlite.jdbc}"/>
            <then>
            </then>
            <else>
                <mkdir dir="extjars"/>
                <get src="${sqlite.jdbc.download.url}" dest="${sqlite.jdbc}" verbose="true"/>
            </else>
        </if>
        <if>
            <available type="file" file="${jna.lib}"/>
            <then>
            </then>
            <else>
                <mkdir dir="extjars"/>
                <get src="${jna.lib.download.url}" dest="${jna.lib}" verbose="true"/>
            </else>
        </if>
        <if>
            <os family="mac"/>
            <then>
                <property name="XstartOnFirstThread" value="-XstartOnFirstThread" />
            </then>
            <else>
                <property name="XstartOnFirstThread" value="-Dx" />
            </else>
        </if>
        <delete dir="${outputDir}/tests/junitxml-${kind}${jdk-exec-version}" />
        <delete dir="${outputDir}/tests/TestResults-${kind}${jdk-exec-version}" />
        <mkdir dir="${outputDir}/tests/junitxml-${kind}${jdk-exec-version}"/>
        <mkdir dir="${outputDir}/tests/TestResults-${kind}${jdk-exec-version}"/>
        <if>
            <not>
                <os family="windows"/>
            </not>
            <then>
                <symlink link="${outputDir}/tests/${kind}/lib" resource="${basedir}/deployment/native/${qtjambi.osname}/${kind}/lib"/>
            </then>
        </if>
            <junit fork="yes" jvm="${test.jvm}" printsummary="true" haltonfailure="no" timeout="480000" showoutput="yes" logfailedtests="yes">
                <classpath refid="qtjambi.classpath"/>
                <jvmarg value="-Djava.library.path=${absQtPath}${psep}${absJambiPath}${psep}${outputDir}/tests/bin${psep}${outputDir}/tests/lib"/>
                <jvmarg value="-Dio.qt.verbose-loading=${io.qt.verbose-loading}"/>
                <jvmarg value="-Dio.qt.debug=${kind}"/><!-- This should not be needed now, it loads default from MANIFEST.MF -->
                <jvmarg value="-Dio.qt.debug.inhibitNativeResourceThread=true"/>
                <jvmarg value="-Dio.qt.debug.level=${io.qt.debug.level}"/>
                <jvmarg value="-Dio.qt.exceptions-for-messages=none"/>
                <jvmarg value="-Dio.qt.no-deployment-spec=true"/>
                <jvmarg value="-Dio.qt.pluginpath=${basedir}/deployment/native/${qtjambi.osname}/${kind}/plugins${psep}${outputDir}/tests/${kind}/plugins"/>
                <jvmarg value="${XstartOnFirstThread}"/>
                <jvmarg value="-Dqtjambi.deployer.test.jdbc=${sqlite.jdbc}"/>
                <jvmarg value="-Xrs"/><!-- This stops JVM intercepting SIGSEGV
                from native code (so we can see where/why it crashed) otherwise
                the JVM may promote SIGSEGV to NullPointerException, which is
                not that useful for debugging. -->
                <jvmarg value="-Xcheck:jni"/>
                <env key="${env.qtjambi.debug.trace}" value="1"/>
                <env key="QT_MULTIMEDIA_PREFERRED_PLUGINS" value="Test"/>
                <!--env key="QML_IMPORT_PATH" value="${absQtPath}/../qml"/>
                <env key="QML2_IMPORT_PATH" value="${absQtPath}/../qml"/-->
    <!--            <jvmarg value="-verbose"/> -->
                <formatter type="xml" usefile="yes" />
                <batchtest fork="yes" todir="${outputDir}/tests/junitxml-${kind}${jdk-exec-version}">
                    <fileset refid="qtjambi.autotest.classes"/>
                </batchtest>
            </junit>
        <if>
            <not>
                <os family="windows"/>
            </not>
            <then>
                <symlink action="delete" link="${outputDir}/tests/${kind}/lib"/>
            </then>
        </if>
        <junitreport todir="${outputDir}/tests/junitxml-${kind}${jdk-exec-version}">
            <fileset dir="${outputDir}/tests/junitxml-${kind}${jdk-exec-version}">
                <include name="TEST-*.xml" />
            </fileset>
            <report format="frames" todir="${outputDir}/tests/TestResults-${kind}${jdk-exec-version}" />
        </junitreport>
    </target>

    <target name="run" depends="init">
        <if>
            <available file="${basedir}/deployment/native/${qtjambi.osname}/debug" type="dir"/>
            <then>
                <antcall target="debug.run"/>
            </then>
            <else>
                <if>
                    <available file="${basedir}/deployment/native/${qtjambi.osname}/release" type="dir"/>
                    <then>
                        <antcall target="release.run"/>
                    </then>
                    <else>
                        <fail message="No build available."/>
                    </else>
                </if>
            </else>
        </if>
    </target>
    
    <target name="release.run" depends="init">
        <if>
            <available file="${basedir}/deployment/native/${qtjambi.osname}/release" type="dir"/>
            <then>
                <antcall target="run.test">
                    <param name="jdk-exec-version" value=""/>
                    <param name="kind"          value="release"/>
                </antcall>
            </then>
            <else>
                <fail message="No release build available."/>
            </else>
        </if>
    </target>
    
    <target name="debug.run" depends="init">
        <if>
            <available file="${basedir}/deployment/native/${qtjambi.osname}/debug" type="dir"/>
            <then>
                <antcall target="run.test">
                    <param name="jdk-exec-version" value=""/>
                    <param name="kind"          value="debug"/>
                </antcall>
            </then>
            <else>
                <fail message="No debug build available."/>
            </else>
        </if>
    </target>
    
    <target name="release.run8" depends="init">
        <if>
            <available file="${basedir}/deployment/qtjambi-jre8-${qtjambi.jar.version}.jar"/>
            <then>
                <if>
                    <available file="${basedir}/deployment/native/${qtjambi.osname}/release" type="dir"/>
                    <then>
                        <antcall target="run.test">
                            <param name="jdk-exec-version" value="8"/>
                            <param name="kind"             value="release"/>
                        </antcall>
                    </then>
                    <else>
                        <fail message="No release build available."/>
                    </else>
                </if>
            </then>
        </if>
    </target>
    
    <target name="debug.run8" depends="init">
        <if>
            <available file="${basedir}/deployment/qtjambi-jre8-${qtjambi.jar.version}.jar"/>
            <then>
                <if>
                    <available file="${basedir}/deployment/native/${qtjambi.osname}/debug" type="dir"/>
                    <then>
                        <antcall target="run.test">
                            <param name="jdk-exec-version" value="8"/>
                            <param name="kind"          value="debug"/>
                        </antcall>
                    </then>
                    <else>
                        <fail message="No debug build available."/>
                    </else>
                </if>
            </then>
        </if>
    </target>
    
    <target name="tests.generate"
            depends="init.build, compile.native.generator, compile.native, compile.java, compile.java8" description="Generates and builds all tests"/>

    <target name="tests.compile"
            depends="init.build, compile.native, compile.java, compile.java8" description="Builds all tests without recalling generator"/>
            
    <target name="tests.compile.native"
            depends="init.build, compile.native" description="Builds native test components"/>
            
    <target name="tests.compile.java"
            depends="init.build, compile.java, compile.java8" description="Builds java test components"/>

    <target name="tests.run"
            depends="init.build, init.test, setenv, run" description="Runs tests and generates report in TestReport subdir"/>

    <target name="tests.run.all"
            depends="init.build, init.test, setenv, release.run, debug.run, release.run8, debug.run8" description="Runs tests and generates report in TestReport subdir"/>

    <target name="tests.release.run"
            depends="init.build, init.test, setenv, release.run" description="Runs tests on the release build and generates report in TestReport subdir"/>

    <target name="tests.debug.run"
            depends="init.build, init.test, setenv, debug.run" description="Runs tests on the debug build and generates report in TestReport subdir"/>

    <target name="tests.release.run8"
            depends="init.build, init.test, setenv" description="Runs tests on the release build and generates report in TestReport subdir">
            <antcall target="release.run8">
                <param name="check.jdk8" value="true"/>
            </antcall>
    </target>

    <target name="tests.debug.run8"
            depends="init.build, init.test, setenv" description="Runs tests on the debug build and generates report in TestReport subdir">
            <antcall target="debug.run8">
                <param name="check.jdk8" value="true"/>
            </antcall>
    </target>

    <target name="tests.release.all.run"
            depends="init.build, init.test, setenv, release.run, release.run8" description="Runs tests on the release build and generates report in TestReport subdir"/>

    <target name="tests.debug.all.run"
            depends="init.build, init.test, setenv, debug.run, debug.run8" description="Runs tests on the debug build and generates report in TestReport subdir"/>

</project>
